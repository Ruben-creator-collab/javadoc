package ejercicio4.java;

public class Ejercicio4 {
    
    // 1. Creamos el tipo enumerado
    enum Talla {
        PEQUEÑA, MEDIANA, GRANDE, EXTRAGRANDE
    }

    public static void main(String[] args) {
        // 2. Creamos variables del tipo enumerado
        Talla talla1 = Talla.PEQUEÑA;
        Talla talla2 = Talla.MEDIANA;
        Talla talla3 = Talla.GRANDE;
        Talla talla4 = Talla.EXTRAGRANDE;

        // 3. Mostramos los valores por consola con una explicación
        System.out.println("La talla1 es: " + talla1 + " → Es la más chica.");
        System.out.println("La talla2 es: " + talla2 + " → Es una talla intermedia.");
        System.out.println("La talla3 es: " + talla3 + " → Es una talla grande.");
        System.out.println("La talla4 es: " + talla4 + " → Es la más grande de todas.");
    }
}

